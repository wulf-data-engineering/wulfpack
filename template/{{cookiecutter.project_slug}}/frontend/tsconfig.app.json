{
	"extends": "./.svelte-kit/tsconfig.json",

	"compilerOptions": {
		"target": "es2020", // modern JS: async/await, optional chaining
		"module": "esnext", // let Vite handle imports
		"lib": ["es2020", "dom"], // modern JS + browser APIs
		"strict": true, // full type safety
		"moduleResolution": "bundler",
		"isolatedModules": true, // helps Vite check files individually
		"noEmit": true, // let Vite handle JS output
		"skipLibCheck": true, // Note: Skipping library checks hides potential type errors in dependencies
		"types": ["node", "playwright"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"], // no *.js by design
	"exclude": ["src/**/*.test.ts"]

	// Path aliases are handled by https://svelte.dev/docs/kit/configuration#alias
	// except $lib which is handled by https://svelte.dev/docs/kit/configuration#files
	//
	// To make changes to top-level options such as include and exclude, we recommend extending
	// the generated config; see https://svelte.dev/docs/kit/configuration#typescript
}
